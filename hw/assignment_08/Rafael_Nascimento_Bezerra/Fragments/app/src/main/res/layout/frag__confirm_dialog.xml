<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.stevens.cs522.chat.oneway.server.activities.fragments.NewChatFragment"
    android:padding="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/frag__confirm_dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!--<EditText-->
            <!--android:id="@+id/frag__confirm_dialog_input_text"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">



            <Button
                android:id="@+id/frag__confirm_dialog_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_confirm"
                android:layout_weight="1" />
            <Button
                android:id="@+id/frag__confirm_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_cancel"
                android:layout_weight="1" />


        </LinearLayout>

    </LinearLayout>
</FrameLayout>
