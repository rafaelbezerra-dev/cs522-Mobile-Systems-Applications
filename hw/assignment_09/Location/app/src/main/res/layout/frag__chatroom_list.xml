<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.stevens.cs522.chat.oneway.server.activities.fragments.ChatroomListFragment">



    <TextView
        android:id="@+id/frag__chatroom_list_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/frag__chatroom_list_empty_text"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/frag__chatroom_list_layout_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">

        <!--<TextView-->
            <!--android:id="@+id/frag__chatroom_list_title"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
            <!--android:text="@string/frag__chatroom_list_title"-->
            <!--android:layout_gravity="center_horizontal" />-->

        <ListView
            android:id="@+id/frag__chatroom_list_content"
            android:choiceMode="singleChoice"
            android:listSelector="@color/common_plus_signin_btn_text_light_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</FrameLayout>
