        <!--android:layout_gravity="center"-->
        <!--android:orientation="vertical">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/frag__new_message_chatroom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag__new_message_chat"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/frag__new_message_chatroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/frag__new_message_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag__new_message_message"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/frag__new_message_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:inputType="textMultiLine"-->
            <!--android:ems="10"-->
            <!--android:id="@+id/frag__new_message_input_text"-->
            <!--android:layout_weight="0.32" />-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">



            <Button
                android:id="@+id/frag__new_message_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag__new_message_confirm_button"
                android:layout_weight="1" />
            <Button
                android:id="@+id/frag__new_message_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag__new_message_cancel_button"
                android:layout_weight="1" />



        </LinearLayout>

    </LinearLayout>

</FrameLayout>
